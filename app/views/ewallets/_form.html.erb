        <br>
        <div class="small">STEP 1</div>
        <div class="place">What kind of currency you want to top up ???</div>

<%= form_for (@ewallet) do |p| %>
<select name="ewallet[currency]">
  <option value="ringgitcoin">RinggitCoin</option>
