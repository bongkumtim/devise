  <option value="online transfer">Online Transfer</option>
  <option value="crypto transfer">Crypto Transfer</option>
  <option value="paypal">PayPal</option>
</select><br><br>


        <div class="small">STEP 3</div>
        <div class="place">Please enter the amount</div>
  <select name="ewallet[description]">
  <option value="credit">Transfer Immediately</option>
  </select>
  <%= p.label :balance %>:
  <%= p.number_field :balance %><br/>
  <h4><%= p.submit %></h4>
<%end%>