<center><h2 class="sub-header">Transaction Details</h2></center>
          <div class="table-responsive">
            <table class="table table-striped">
            <center><h3>RinggitCoin</h3></center>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Description</th>
                  <th>Currency</th>
                  <th>Amount</th>
                  <th>Balance</th>
                </tr>
              </thead>
              <tbody>
              <% running_total = 0 %>
              <% @ringgit.each do |x| %>
                <tr>
                  <td><%= x.created_at %></td>
                  <td><%= x.description %> from <%= x.choice %></td>
                  <td><%= x.currency %></td>
                  <td><%= number_to_currency(x.balance) %></td>
                  <% running_total = running_total + (x.balance) %>
                  <% end %>
                  <td><%= number_to_currency(running_total) %></td>
                </tr>
              </tbody>
            </table>
          </div>